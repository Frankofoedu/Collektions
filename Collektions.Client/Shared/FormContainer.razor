<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-4 col-md-6 col-10 my-3">
            <div class="card shadow rounded">
                <div class="card-header">
                    <h4>@Header</h4>
                </div>
                <div class="card-body">
                    @ChildComponent
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string Header { get; set; }
    [Parameter]
    public RenderFragment ChildComponent { get; set; }
}
